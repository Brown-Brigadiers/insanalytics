ScreenManager:
    id: screen_manager
    UserScreen:
        id: user_screen
        name: 'UserScreen'
        manager: screen_manager

    ResultsScreen:
        name: 'ResultsScreen'
        manager: screen_manager
        label_text: user_screen.text

<UserScreen>:
    on_enter:
        bed.text = ''
        dprice.text = ''
        bath.text = ''
        sqft.text = ''
    BoxLayout:
        dprice: dprice
        bath: bath
        bed: bed
        sqft: sqft
        orientation: 'vertical'

        Label:
            text: "INSANALYTICS"
            font_size:50
            size_hint_y: None
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    size: 10, 10

        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text:"Desired Price"
                    font_size: 50
                    size: self.texture_size
                    height: 150
                Label:
                    text:"Bed"
                    font_size: 50
                    center: self.parent.center
                    size: self.texture_size
                    height: 150
                Label:
                    text:"Bath"
                    font_size: 50
                    center: self.parent.center
                    size: self.texture_size
                    height: 150
                Label:
                    text:"Square Foot"
                    font_size: 50
                    center: self.parent.center
                    size: self.texture_size
                    height: 150
            BoxLayout:
                orientation: 'vertical'
                FloatInput:
                    id: dprice
                    font_size:50
                    height: 150
                    multiline: False
                FloatInput:
                    id: bed
                    font_size:50
                    height: 150
                    multiline: False
                FloatInput:
                    id: bath
                    font_size:50
                    height: 150
                    multiline: False
                FloatInput:
                    id: sqft
                    font_size:50
                    height: 150
                    multiline: False
        GridLayout:
            cols: 1
            rows: 1
            # orientation: 'horizontal'
            size_hint_y: None
            # pos: root.pos
            center: self.parent.center
            Button:
                text: "Submit"
                on_press: root.submit()
                id: submit
<ResultsScreen>:

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.label_text
            font_size: 50
            size: self.texture_size

        Button:
            text:"Return"
            size_hint_y:None
            on_press: root.manager.current = 'UserScreen'
